<source>
  @type forward
  self_hostname "#{ENV['HOSTNAME']}"
  bind 0.0.0.0
  port 24224
</source>

<filter **>
  @type record_transformer
  <record>
    forwarded_by "#{ENV['HOSTNAME']}"
    source_component "OCP"
  </record>
</filter>

<match **>
  @type ${TARGET_TYPE}
  host ${TARGET_HOST}
  port ${TARGET_PORT}
  ${ADDITIONAL_OPTS}
</match>
